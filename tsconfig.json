{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["./app/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "frontend/app/node_modules",
    "backend",
    "scripts",
    "node_modules",
    "components/ui",
    "jest.setup.ts",
    "jest.config.js",
    "__tests__",
    "_deprecated",
    "app/lib/profit-engine/**",
    "app/lib/services/ai/**",
    "app/lib/services/ventas-transaction.service.ts",
    "functions/**"
  ]
}
