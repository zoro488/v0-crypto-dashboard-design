# ═══════════════════════════════════════════════════════════════════════════
# CHRONOS DASHBOARD - Environment Variables
# ═══════════════════════════════════════════════════════════════════════════

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
# Get these values from Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK (Backend only)
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# ============================================================================
# SENTRY ERROR TRACKING
# ============================================================================
# Get DSN from Sentry.io > Settings > Projects > [Your Project] > Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=https://your_key@o.ingest.sentry.io/your_project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Sentry Configuration
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug

# ============================================================================
# VERCEL DEPLOYMENT (For CI/CD)
# ============================================================================
# Get these from Vercel Dashboard > Settings > Tokens
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Environment: development, staging, production
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Base URL (if using separate backend)
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================
# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# ============================================================================
# PWA SETTINGS
# ============================================================================
# Service Worker Cache Name
NEXT_PUBLIC_CACHE_NAME=chronos-cache-v1

# ============================================================================
# EXTERNAL APIS (if needed)
# ============================================================================
# Crypto API (example: CoinGecko, Binance, etc.)
CRYPTO_API_KEY=your_crypto_api_key_here
CRYPTO_API_URL=https://api.example.com

# ============================================================================
# SECURITY
# ============================================================================
# JWT Secret (for backend auth)
JWT_SECRET=your_very_secure_random_string_here

# Session Secret
SESSION_SECRET=another_very_secure_random_string

# ============================================================================
# DATABASE (if using additional databases)
# ============================================================================
# PostgreSQL/MySQL connection (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/chronos_db

# Redis (for caching, optional)
REDIS_URL=redis://localhost:6379

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_VOICE_AGENT=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# Enable React DevTools in production
NEXT_PUBLIC_ENABLE_REACT_DEVTOOLS=false

# Enable verbose logging
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=false

# ============================================================================
# NOTES
# ============================================================================
# 1. Copy this file to .env.local and fill in your actual values
# 2. Never commit .env.local to version control
# 3. Add .env.local to your .gitignore file
# 4. For production, set these values in your hosting platform (Vercel/Railway/etc.)
# 5. Prefix client-side variables with NEXT_PUBLIC_ to expose them to the browser
# 6. Keep sensitive keys (API keys, secrets) without NEXT_PUBLIC_ prefix
