# ============================================================================
# CHRONOS SYSTEM - Environment Variables Template
# ============================================================================
# Copy this file to .env.local and fill with your actual values
# NEVER commit .env.local to version control

# ============================================================================
# FIREBASE CONFIGURATION (Frontend)
# ============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================================================
# FIREBASE ADMIN (Backend)
# ============================================================================
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project_id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ============================================================================
# API CONFIGURATION
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
API_PORT=3001
NODE_ENV=development

# ============================================================================
# SECURITY
# ============================================================================
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ============================================================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================================================
# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Environment
NEXT_PUBLIC_ENVIRONMENT=development

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel
VERCEL_URL=your_vercel_url_here
NEXT_PUBLIC_VERCEL_URL=your_vercel_url_here
